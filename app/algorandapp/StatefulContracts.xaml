<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="algorandapp.StatefulContracts">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Create App" FontSize="Large" Clicked="CreateApp_Clicked"></Button>
            <Button x:Name="OptInBtn" FontSize="Large"  Text="Opt-In" Clicked="OptIn_Clicked" IsEnabled="False"></Button>
            <Button x:Name="CallAppBtn" FontSize="Large" Text="Call App" Clicked="CallApp_Clicked" IsEnabled="False"></Button>
            <Button x:Name="ReadLocalStateBtn" FontSize="Large"  Text="Read Local State" Clicked="ReadLocalState_Clicked" IsEnabled="False"></Button>
            <Button x:Name="ReadGlobalStateBtn" FontSize="Large"  Text="Read Global State" Clicked="ReadGlobalState_Clicked" IsEnabled="False"></Button>
            <Button x:Name="UpdateAppBtn" FontSize="Large"  Text="Update App" Clicked="UpdateApp_Clicked" IsEnabled="False"></Button>
            <Button x:Name="CallUpdatedAppBtn" FontSize="Large"  Text="Call Updated App" Clicked="CallUpdatedApp_Clicked" IsEnabled="False"></Button>
            <Button x:Name="ReadLocalStateAgainBtn"  FontSize="Large"   Text="Read Local State Again" Clicked="ReadLocalState_Clicked" IsEnabled="False"></Button>
            <Button x:Name="CloseOutAppBtn"  FontSize="Large"   Text="Close Out App" Clicked="CloseOutApp_Clicked" IsEnabled="False"></Button>
            <Button x:Name="ClearAppCtn"   FontSize="Large"  Text="Clerar App" Clicked="ClearApp_Clicked" IsEnabled="False" IsVisible="false"></Button>
            <Button x:Name="DeleteAppBtn"  FontSize="Large"   Text="Delete App" Clicked="DeleteApp_Clicked" IsEnabled="False" IsVisible="false"></Button>
            <ScrollView>
                  <WebView x:Name="myWebView" HeightRequest="1000" ></WebView>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>