<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="algorandapp.Indexer">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Health" Clicked="Health_Clicked"></Button>
            <Button Text="Lookup Account" Clicked="LookupAccount_Clicked"></Button>
            <Button Text="Lookup AccountTransactions" Clicked="LookupAccountTransactions_Clicked"></Button>
            <Button Text="SearchForApplicaitons" Clicked="SearchForApplications_Clicked"></Button>
            <Button x:Name="LookupApplicationByID" Text="Lookup Application By ID" Clicked="LookupApplicationByID_Clicked" IsEnabled="False"></Button>
            <Button Text="Search For Assets" Clicked="SearchForAssets_Clicked"></Button>
            <Button x:Name="LookupAssetByID"    Text="Lookup Asset By ID" Clicked="LookupAssetByID_Clicked" IsEnabled="False"></Button>

            <ScrollView>
                  <WebView x:Name="myWebView" HeightRequest="1000" ></WebView>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>